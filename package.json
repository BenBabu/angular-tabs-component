{
  "name": "angular-tab-component",
  "version": "0.0.1",
  "description": "A full featured tab component for Angular (2 and above, including 4).",
  "main": "dist/bundles/angular-tab-component.umd.js",
  "scripts": {
    "cleanup": "rimraf dist/bundles dist/src dist/index.d.ts dist/index.js dist/index.js.map dist/LICENCE dist/README.md",
    "bundling": "rollup -c",
    "minify": "uglifyjs dist/bundles/angular-tab-component.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/angular-tab-component.umd.min.js",
    "build": "npm run cleanup && ngc && npm run bundling && npm run minify",
    "watchit": "ngc -w"
  },
  "author": "karanhudia@gmail.com",
  "license": "FreeBSD License",
  "dependencies": {
    "@angular/common": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/forms": "^4.2.4",
    "@angular/platform-browser": "^4.2.5",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rxjs": "^5.4.1",
    "tsickle": "^0.23.3",
    "zone.js": "^0.8.12"
  },
  "devDependencies": {
    "@angular/compiler": "^4.2.4",
    "@angular/compiler-cli": "^4.2.4",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "typescript": "^2.3.4",
    "uglify-js": "^3.0.19"
  }
}
